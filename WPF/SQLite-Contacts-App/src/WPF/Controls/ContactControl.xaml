<UserControl x:Class="WPF.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#aae5e5e5">
        <StackPanel Margin="5">
            <TextBlock
                x:Name="NameTextBlock"
                Text="Name Lastname"
                FontSize="20" 
                FontWeight="Bold"></TextBlock>
            <TextBlock
                x:Name="EmailTextBlock"
                Text="user@mail.ru"
                FontSize="15" 
                Foreground="DodgerBlue"></TextBlock>
            <TextBlock 
                x:Name="PhoneTextBlock"
                Text="(123) 456 7890"
                FontSize="15" 
                FontStyle="Italic"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
